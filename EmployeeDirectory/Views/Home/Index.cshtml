@{
    ViewData["Title"] = "Home Page";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

 
@* blue background-color: #1e4e9d
    grey: #394347
    yellow: #F7F410
*@


<style>


   * {
        
        padding: 0;
        margin: 0;
        
        
    }


    .login-container {
        font-family: 'Roboto', sans-serif;
        display: block;
        background-color: #394347;
        border-radius: 25px;
        height: 60vh;
        width: 75vh;
        margin: auto;
        margin-top: 2.5em;
        margin-bottom: 2.5em;
        padding: 1em;
        justify-content: center;
        text-align: center;
    }


    .login-title {
        font-size: 2em;
        margin-top: 0.25em;
        font-weight: bolder;
        color: #F7F410;
    }

    h4 {
        font-size: 1.25em;
        margin-top: 0.25em;
        font-weight: bolder;
        color: #F7F410;
    }

    .email, .password {
        
        margin: 1em;
        
    }

    .submitbutton {
        color: #394347;
        padding: 0.25em;
        border-style: hidden;
        border-radius: 25px;
        background-color: #F7F410;
        font-size: 1.4em;
        font-weight: bolder;
        width: 5em;
        margin-top: 1.5em;
    }

    .email input, .password input {
        border-radius: 25px;
        padding-left: 1.5em;
        padding: 0.5em, 0em;
        height: 5vh;
        width: 40vh;
        margin-top: 1em;
        text-align: left;
        font-size: 1em;
        border-style: solid;
        border-color: #F7F410;
        
    }

</style>
<form class="login" action="/Methods/Login" method="get">

    <div class="login-container">

        <h3 class="login-title" align="center">Sign In</h3>
        <br />


        <div class="email">
            <h4>Email:</h4>
            <input type="text" name="Email" placeholder="Email" />
        </div>
        <div class="password">
            <h4>Password: </h4>
            <input type="password" name="Password" placeholder="Password" />
            </div>

            <input class="submitbutton" type="submit" value="Sign In" />



        </div>
</form>

<p>@ViewBag.Message</p>
