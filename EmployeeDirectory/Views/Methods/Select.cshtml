@using System;
@using System.Data.SqlClient;
@{
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link Href="https://www.fontify.me/wf/f6e2e931edd4f5a2fc4d874471baa56a" rel="stylesheet">

    <style>


        * {
            padding: 0;
            margin: 0;
        }

        h1 {
            margin-top: 1em;
            text-align: center;
            color: #394347;
            font-family: font92774;
        }


        table tr th {
            background-color: #394347;
            color: #F7F410;
            font-weight: bolder;
            padding: 0.5em;
            border: 1px solid #fff;
        }

        table tr td {
            padding: 0.5em;
            border: 1px solid #394347;
        }


        .employee-container {
            font-family: 'Roboto', sans-serif;
        }

        table {
            margin-left: auto;
            margin-right: auto;
            border-collapse: collapse;
            border: 1px solid #394347;
        }

        .search-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .search-container button {
                color: #fff;
                padding: 0.2em;
                border-style: hidden;
                border-radius: 25px;
                background-color: #394347;
                font-size: 1em;
                font-weight: bolder;
                width: 5em;
            }


            .search-container input {
                border-radius: 25px;
                padding: 0.2em;
                text-align: left;
                font-size: 1em;
                border-style: solid;
                border-color: #394347;
            }

            .search-container placeholder {
                color: #394347;
            }

        .delete a {
            text-decoration: none;
            color: #394347;
        }

            .delete a:hover {
                text-decoration: underline;
                color: black;
                font-weight: bolder;
            }

        .buttonsContainer{
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }

        .return {
            background-color: #394347;
            border-radius: 25px;
            color: #fff;
            font-family: font92774;
            font-size: 1.25em;
            text-align: center;
            justify-content: center;
            align-items: center;
            display: block;
            margin: 0 auto;
            opacity: 0.5;
            font-weight: bolder;
            text-decoration: none;
            border-style: hidden;
            /*Transition*/
            -webkit-transition: all 1.5s ease;
            -moz-transition: all 1.5s ease;
            -o-transition: all 1.5s ease;
            height: 40px;
            width: 185px;
            -webkit-transition: all 0.5s ease;
            -moz-transition: all 0.5s ease;
            -o-transition: all 0.5s ease;
        }

        .divider{
            padding: 2em;
        }

            .return:hover {
                background-color: #394347;
                color: #F7F410;
                opacity: 1;
                -webkit-box-shadow: 0px 0px 20px#393e41(255,255,255,0.8);
                -moz-box-shadow: 0px 0px 20px#393e41(255,255,255,0.8);
                box-shadow: 0px 0px 20px#393e41(255,255,255,0.8);
            }

        .paddingInsert{

        }

        .paddingUpdate{

        }
    </style>
    // this calls 'model' from MethodsController
    @model List<EmployeeDirectory.Models.EmployeeModel>
<div class="employee-container">
    <h1>Employee Details</h1>

    <br />

    <div class="search-container">
        <form action="/Methods/Search">
            <input type="text" placeholder="Search Employee..." name="EmployeeID">
            <button type="submit" asp-area="" asp-controller="Methods" asp-action="Search" asp-route-EmployeeID="">Submit</button>
        </form>
    </div>

    <br />

    <table>
        <tr>
            <th>Employee ID </th>
            <th>Employee Name </th>
            <th>Job Title </th>
            <th>Workplace </th>
            <th>Email </th>
            <th>Phone Number </th>
            <th>HR Action</th>
        </tr>
        @foreach (var employeeDetails in Model)
        {
            // this calls 'employeeDetails' from MethodsController
            <tr>
                <td>@employeeDetails.EmployeeID</td>
                <td>@employeeDetails.EmployeeName</td>
                <td>@employeeDetails.JobTitle</td>
                <td>@employeeDetails.WorkPlace</td>
                <td>@employeeDetails.Email</td>
                <td>@employeeDetails.PhoneNumber</td>
                <td class="delete">@Html.ActionLink("Delete", "Delete", new { EmployeeID = employeeDetails.EmployeeID })</td> @*Calling Delete variable and assigns it to Employee ID in the DataBase*@

            </tr>
        }
    </table>


    <br />
    <div class="buttonsContainer">
        <div class="paddingInsert">
            <form action="/Methods/Insert" method="get">
                <button class="return">Add Employee</button>
            </form>
        </div>
        <div class="divider"></div>
        <div class="paddingUpdate">
            <form action="/Methods/Update" method="get">
                <button class="return">Update Employee</button>
            </form>
        </div>
    </div>

    </div>

    }


